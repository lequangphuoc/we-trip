var day_count = $(".days-tab").length;
for (var i = 1; i <= day_count; i++) {
  $("#li-day" + i).removeClass('active');
  $("#day" + i).removeClass('active');
}

// add new days
$("#day-left-panel").append("<%= j(render 'schedule_days/li_schedule_day', day: @schedule_day) %>");
$(".itinerary-content").append("<%= j(render @schedule_day ) %>");
$("#li-day" + (day_count + 1)).addClass('active');
$("#day" + (day_count + 1)).addClass('active');
