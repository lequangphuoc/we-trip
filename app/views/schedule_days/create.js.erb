var day_count = $(".days-tab").length;
for (var i = 1; i <= day_count; i++) {
  $("#li-day" + i).removeClass('active');
  $("#day" + i).removeClass('active');
}

// add new day
$("#day-left-panel").append("<%= j(render 'schedule_days/li_schedule_day', schedule_day: @schedule_day) %>");
$("#itinerary-content").append("<%= j(render @schedule_day) %>");
$("#li-day<%= @schedule_day.index %>").addClass('active');
$("#day<%= @schedule_day.index %>").addClass('active');

// map
var map = maps["li_tab<%= @schedule_day.index %>"][0];
google.maps.event.trigger(map, 'resize');
map.setZoom(5);
map.setCenter(new google.maps.LatLng(DEFAULT_LAT_AVG, DEFAULT_LNG_AVG));