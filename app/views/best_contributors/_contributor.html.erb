<div>
  <%= link_to user do %>
      <div class="best-contributor-photo"><img width="100%" height="152" src="http://<%= current_user.avatar %>" /></div>
      <div class="contributor-info">
        <h3><%= user.name %> </h3>
        <span class="num-contribution"><%= pluralize(user.point, 'point') %></span>
      </div>
  <% end %>
</div>
