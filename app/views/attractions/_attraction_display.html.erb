<%= link_to attraction.place do %>
    <li class="day_detail" id="day-detail_<%= attraction.index %>">
      <% if attraction.index != 1 %>
          <div class="transport-time">
            <div class="day-transfer icn-driving"><%= attraction.distance %> &nbsp;/&nbsp; <%= attraction.duration %></div>
          </div>
      <% end %>
      <input type="hidden" id="attraction_index" value="<%= attraction.index %>">
      <div class="day-place-detail">
        <div class="col-img">
          <%= image_tag(attraction.image_url, height: '50', width: '50', style: 'vertical-align: bottom', class: 'img-circle') %>
        </div>

        <div class="day-place-detail-middle col-name">
          <p class="day-place-name"><%= attraction.title %></p>
          <h3 class="tag"><%= attraction.hour_spend %> hour</h3>
        </div>

      </div>
    </li>
<% end %>