<div class="modal fade budget-plan-edit-form" id="budget_item_form<%= budget_item.id %>"
     tabindex="-1" role="dialog" aria-labelledby="budgetPlanItemLabel"
     aria-hidden="true" xmlns="http://www.w3.org/1999/html">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h3 class="modal-title" id="budgetPlanItemLabel">Edit Expense Item</h3>
      </div>

      <%= form_for budget_item, class: 'form-horizontal form-card', remote: true do |_| %>
          <div class="form-group">
            <label for="item" class="control-label">Item:</label>
            <input type="text" class="form-control" id="name" value="<%= budget_item.name %>"
                   name="budget_item[name]" placeholder="Name">
          </div>

          <input type="hidden" value="<%= budget_item.budget_section_id %>" name="budget_item[budget_section_id]">
          <input type="hidden" value="<%= @trip.id %>" name="trip_id">

          <div class="form-group">
            <label for="assignee" class="control-label">Assignee:</label>
            <select class="form-control" name="assignee" id="assignee">
              <% @people_in_trip.each do |user| %>
                  <option value="<%= user.id %>" <%= user.name == budget_item.assignee && 'selected' %> ><%= user.name %></option>
              <% end %>
              <option value="split" <%= 'Split Equally' == budget_item.assignee && 'selected' %>>Split Equally</option>
            </select>
          </div>

          <div class="form-group">
            <label for="cost" class="control-label">Cost:</label>
            <input type="number" class="form-control" id="cost"
                   value="<%= budget_item.price %>"
                   name="budget_item[price]" placeholder="Item">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-success"
                    style="margin-bottom: 8px; margin-top: 16px; width: 50%">Save</button>
          </div>
      <% end %>
    </div>
  </div>
</div>
